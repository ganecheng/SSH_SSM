<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>
	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/jpkc
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			MySQLDrive
		</property>



		<!-- 打印SQL语句 -->
		<property name="show_sql">false</property>

		<!-- 在启动时删除和重建数据库 -->
		<property name="hbm2ddl.auto">update</property>

		<!-- 数据源交给C3P0管理,检查连接是否失效,部署的时候非常重要 -->
		<property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
		<!-- 连接池中最多20个连接 -->
		<property name="c3p0.max_size">200</property>
		<property name="c3p0.min_size">10</property>
		<!-- 何时从连接池中移除一个空闲的连接（以秒为单位）时。 -->
		<property name="c3p0.timeout">5000</property>
		<!-- 被缓存的预编译语句数量。用来提高性能。 -->
		<property name="c3p0.max_statements">100</property>
		<!-- 10分钟检查一次是否有无效的连接 -->
		<property name="c3p0.idle_test_period">600</property>
		<!-- 当连接池中的连接耗尽的时候c3p0一次同时获取的连接数。 -->
		<property name="c3p0.acquire_increment">5</property>
		<!-- 每次都验证连接是否可用,降低效率,但能保证每次都能得到连接 -->
		<property name="c3p0.validate">true</property>


		<mapping resource="com/jpkc/pojo/Course.hbm.xml" />
		<mapping resource="com/jpkc/pojo/CourseInfo.hbm.xml" />
		<mapping resource="com/jpkc/pojo/Star.hbm.xml" />

	</session-factory>

</hibernate-configuration>